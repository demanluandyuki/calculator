<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 	<FrameLayout
 	    android:id="@+id/fragment_content"
 	    android:layout_width="match_parent"
 	    android:layout_height="0dp"
 	    android:layout_weight="1"
 	    >
 	</FrameLayout>   
    <LinearLayout
        android:id="@+id/bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:background="@color/actionbar_background">
        <TextView
            android:id="@+id/tab_favorite"
            style="@style/TabTextStyle"
            android:drawableTop="@drawable/tab_favorite_bg"
            android:text="@string/menu_favorite"
            />
        <TextView
            android:id="@+id/tab_house_loan"
            style="@style/TabTextStyle"
            android:drawableTop="@drawable/tab_houseloan_bg"
            android:text="@string/menu_house_loan"
            />
         <TextView
            android:id="@+id/tab_personal_tax"
            style="@style/TabTextStyle"
            android:drawableTop="@drawable/tab_personal_tax_bg"
            android:text="@string/menu_personal_tax"
            />            
      </LinearLayout>
	
</LinearLayout>
